<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="user_name"
        android:title="@string/pref_title_display_name"
        android:defaultValue="@string/pref_default_display_name"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <CheckBoxPreference
        android:key="automatic_calculation"
        android:title="@string/pref_automatic_calculation"
        android:summary="@string/pref_description_automatic_calculation"
        android:defaultValue="true" />

    <CheckBoxPreference
        android:key="enable_seven_game"
        android:title="@string/pref_enable_seven_game"
        android:summary="@string/pref_description_enable_seven_game"
        android:defaultValue="true" />

    <EditTextPreference
        android:key="spades_hands_total"
        android:title="@string/pref_spades_hands_total_name"
        android:defaultValue="@string/pref_spades_hands_total_default_value"
        android:selectAllOnFocus="true"
        android:digits="-1234567890"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="seven_hands_total"
        android:title="@string/pref_seven_hands_total_name"
        android:defaultValue="@string/pref_seven_hands_total_default_value"
        android:selectAllOnFocus="true"
        android:digits="-1234567890"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->

